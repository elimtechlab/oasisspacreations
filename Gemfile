source "https://rubygems.org"

# Use the latest Jekyll 4.3.x (works better with Ruby 3.1+)
gem "jekyll", "~> 4.3"

# Add stdlib gems that Ruby 3.4 removed by default
gem "csv"
gem "logger"
gem "base64"
gem "bigdecimal"
gem "webrick"   # needed for `jekyll serve` in Ruby 3.x

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
end
